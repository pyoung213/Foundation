{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "run-p build:*",
        "build:async": "yarn workspace foundation-async build",
        "build:low": "yarn workspace foundation-low build",
        "build:firebase": "yarn workspace foundation-firebase build",
        "start": "run-p start:*",
        "start:watch": "tsc --build",
        "test": "run-p test:*",
        "test:async": "yarn workspace foundation-async test",
        "test:low": "yarn workspace foundation-low test",
        "lint": "run-p lint:*",
        "lint:async": "yarn workspace foundation-async lint",
        "lint:low": "yarn workspace foundation-low lint"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "@vue/eslint-config-typescript": "^5.0.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-switch-case": "^1.1.2",
        "eslint-plugin-vue": "^6.2.2",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.4"
    }
}
